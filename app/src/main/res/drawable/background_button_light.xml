<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">

            <corners android:radius="10dp"></corners>

            <stroke android:color="@color/colorOrangeDarkLight"
                android:width="1dp"></stroke>
            <gradient
                android:angle="90"
                android:endColor="@color/colorOrangeDarkLight"
                android:startColor="@color/colorOrangeLight"
                android:type="linear" />
        </shape>
    </item>
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <corners android:radius="10dp"></corners>

            <stroke android:color="@color/colorButtonDark"
                android:width="1dp"></stroke>
            <gradient
                android:angle="90"
                android:endColor="@color/colorButtonLight"
                android:startColor="@color/colorButtonDark"
                android:type="linear" />
        </shape>
    </item>
</selector>