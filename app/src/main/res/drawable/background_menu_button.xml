<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <corners android:radius="14dp"></corners>
            <stroke android:width="1dp" android:color="@color/colorRedDark"></stroke>
            <padding
                android:bottom="4dp"
                android:left="4dp"
                android:right="4dp"
                android:top="4dp"/>
            <gradient
                android:angle="90"
                android:startColor="@color/colorRedDarkLight"
                android:endColor="@color/colorRedDark"
                android:type="linear" />
        </shape>
    </item>
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <corners android:radius="14dp"></corners>
            <stroke android:width="1dp" android:color="@color/colorRedDark"></stroke>
            <padding
                android:bottom="4dp"
                android:left="4dp"
                android:right="4dp"
                android:top="4dp"/>
            <gradient
                android:angle="90"
                android:startColor="@color/colorRedDark"
                android:endColor="@color/colorRedDarkLight"
                android:type="linear" />
        </shape>
    </item>
</selector>